package Arrays;

public class adding2arrays {

	public static void main(String[] args) {
		//
	int num=5;
	int a[] = new int [5];
	int b[] = new int[5];
	int c[] = new int[5];
	for(int i=0;i<5;i++) {
		a[i]=i;
	}
	for(int i=0;i<5;i++) {
	b[i]=num;
	++num;
	} 
	for(int i=0;i<5;i++) {
		System.out.print(a[i] +" " );
		
	}
	System.out.print();
	for(int i=0;i<5;i++) { 
		System.out.print(b[i]+" ");
	}
	for(int i=0;i<5;i++) {
		c[i]=a[i]+b[i];
	
	
	
	}
	for(int i=0;i<5;i++) {
		System.out.println();
	System.out.print(c[i]);
	}
	}
}
