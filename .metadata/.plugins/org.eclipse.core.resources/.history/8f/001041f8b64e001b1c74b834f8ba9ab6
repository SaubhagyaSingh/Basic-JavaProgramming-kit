package Common_problems;
import java.util.*;
public class Kerdi {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		int a =input.nextInt();
		int b=input.nextInt();
		int n=input.nextInt();
		int q=input.nextInt();
		for(int x=0;x<n;) 
		{
			int k = a+b+(2^(n-1))*b*(n-1);
			System.out.println(k);
		n=n-1;
		}
	}
}
